<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cloudo.bwee.dao.KnowledgeDao">

  <resultMap id="BaseResultMap" type="com.cloudo.bwee.domain.KnowledgeTopic">

    <id column="ID" jdbcType="BIGINT" property="id" />
    <result column="CONTENT" jdbcType="VARCHAR" property="content" />
    <result column="SUBJECT" jdbcType="VARCHAR" property="subject" />
    <result column="PAGE_INDEX" jdbcType="INTEGER" property="pageIndex" />
    <result column="UP_TM" jdbcType="TIMESTAMP"  javaType="java.util.Date" property="upTm" />
    
  </resultMap>

  <sql id="Base_Column_List">
    ID, SUBJECT,CONTENT, PAGE_INDEX, UP_TM
  </sql>
  <sql id="tableName">BW_KNOWLEDGE_TOPIC</sql>
  <select id="findById" parameterType="java.lang.Long" resultMap="BaseResultMap">
    select 
    <include refid="Base_Column_List" />
    from BW_KNOWLEDGE_TOPIC
    where ID = #{id,jdbcType=BIGINT}
  </select>
  
  <delete id="delete" parameterType="java.lang.Long">
    delete from BW_KNOWLEDGE_TOPIC
    where ID = #{id,jdbcType=BIGINT}
  </delete>


  <insert id="insert" parameterType="com.cloudo.bwee.domain.KnowledgeTopic" useGeneratedKeys="true" keyProperty="id">
    insert into BW_KNOWLEDGE_TOPIC ( SUBJECT,CONTENT, PAGE_INDEX)
    values (#{subject,jdbcType=VARCHAR}, #{content,jdbcType=VARCHAR},
      #{pageIndex,jdbcType=INTEGER})
  </insert>





  
</mapper>