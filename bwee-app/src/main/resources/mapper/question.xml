<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cloudo.bwee.dao.QuestionDao">

  <resultMap id="BaseResultMap" type="com.cloudo.bwee.domain.Question">
    <id column="ID" jdbcType="BIGINT" property="id" />
    <result column="CONTENT" jdbcType="VARCHAR" property="content" />
    <result column="ERROR_COUNT" jdbcType="BIGINT" property="error_count" />
    <result column="SOURCE" jdbcType="VARCHAR" property="source" />
    <result column="TYPE" jdbcType="VARCHAR" property="type" />

  </resultMap>

  <sql id="Base_Column_List">
    ID, CONTENT, ERROR_COUNT, SOURCE, TYPE
  </sql>
  <sql id="tableName">BW_QUESTION</sql>
  <select id="findById" parameterType="java.lang.Long" resultMap="BaseResultMap">
    select 
    <include refid="Base_Column_List" />
    from BW_QUESTION
    where ID = #{id,jdbcType=BIGINT}
  </select>
  
  <delete id="delete" parameterType="java.lang.Long">
    delete from BW_QUESTION
    where ID = #{id,jdbcType=BIGINT}
  </delete>


  <insert id="insert" parameterType="com.cloudo.bwee.domain.Question" useGeneratedKeys="true" keyProperty="id">
    insert into BW_QUESTION (ID,  CONTENT, ERROR_COUNT, SOURCE, TYPE)
    values (#{id,jdbcType=BIGINT}, #{content,jdbcType=VARCHAR}, #{errorCount,jdbcType=INTEGER},
      #{source,jdbcType=BIGINT}, #{type,jdbcType=VARCHAR})
  </insert>



  
</mapper>